{
  "ConnectionStrings": {
    "TenantCatalog": "Host=localhost;Port=5432;Database=fixivo;Username=postgres;Password=postgres;",
    "Tenant": "Host=localhost;Port=5432;Database=fixivo;Username=postgres;Password=postgres;",
    "Cache": "Host=localhost;Port=5432;Database=fixivo;Username=postgres;Password=postgres;"
  },
  
  
  
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://fixivo-seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Authentication": {
    "Audience": "your-azure-app-id",
    "ValidIssuer": "https://login.microsoftonline.com/your-tenant-id/v2.0",
    "MetadataUrl": "https://login.microsoftonline.com/your-tenant-id/v2.0/.well-known/openid-configuration",
    "RequireHttpsMetadata": true
  },

  "Outbox": {
    "IntervalInSeconds": 10,
    "BatchSize": 10
  }
}
